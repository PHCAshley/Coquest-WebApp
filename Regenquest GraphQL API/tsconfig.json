{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
