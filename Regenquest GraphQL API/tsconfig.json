{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
